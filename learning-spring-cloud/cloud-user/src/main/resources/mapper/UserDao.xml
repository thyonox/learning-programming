<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.thyonix.user.dao.UserDao">

    <resultMap id="UserDTO" type="org.thyonix.user.domain.dto.UserDTO">
        <id property="userId" column="user_id" />
        <result property="userName" column="user_name" />
    </resultMap>

    <select id="getUserById" parameterType="Long" resultMap="UserDTO">
        select * from cloud_user where user_id = #{userId}
    </select>
</mapper>